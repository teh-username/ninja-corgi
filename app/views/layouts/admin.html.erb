<!-- Render Head -->
<% content_for :head do %>
  <!-- Other things to be rendered -->
  <% if content_for? :addtl_head %>
    <%= yield :addtl_head %>
  <% end %>

<% end %>

<!-- Render Body -->
<% content_for :body do %>
  <%= render 'layouts/sidebar' %>

  <% flash.each do |message_type, message| %>
    <%= content_tag(:div, message, class: "alert alert-#{message_type} text-center") %>
  <% end %>

  <%= yield %>
<% end %>

<!-- Render Base Template -->
<%= render template: "layouts/base" %>
